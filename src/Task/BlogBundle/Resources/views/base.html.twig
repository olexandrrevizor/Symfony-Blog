<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
    <title>{% block title %}Symblog{% endblock %} - Symblog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    {% block stylesheets %}
        <link href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
</head>
<body>
<div class="container">
<section id="wrapper">
    <header id="header">
        <div class="top">
            {% block navigation %}
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="{{ 'http://' ~ app.request.host }}">Brand</a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav navbar-right">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hi, {{ app.user.firstname }} <span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="{{ 'http://' ~ app.request.host ~ '/admin/dashboard'}}">Dashboard</a></li>
                                            <li><a href="{{ 'http://' ~ app.request.host ~ '/admin/logout' }}">Logout</a> </li>
                                        </ul>
                                    </li>
                                {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                                    <li><a href="{{ 'http://' ~ app.request.host ~ '/admin/login'}}">Login</a></li>
                                {% endif %}
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
            {% endblock %}
        </div>
    </header>

    <section class="main-col">
        {% block body %}{% endblock %}
    </section>

    <footer id="footer">
        <div class="navbar navbar-default">
            {% block footer %}
                <p class="text-center vcenter">Footer</p>
            {% endblock %}
        </div>
    </footer>
</section>
</div>
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>