{% extends 'TaskBlogBundle::base.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ post.published_at|date('c') }}">{{ post.published_at|date('l, F j, Y') }}</time></div>
            <h2>{{ post.title }}</h2>
        </header>
        <img src="{{ asset('uploads/' ~ post.slug ~ '/thumb.png') }}" alt="{{ post.title }} image not found" class="large" />
        <div>
            <p>{{ post.body }}</p>
        </div>
        <div class="clear"></div>
    </article>
{% endblock %}